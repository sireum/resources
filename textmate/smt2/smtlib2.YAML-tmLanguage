  #     - name: invalid.smt2
  #       match: '[^\s\)]'

  indexed:
    comment: Indexing on quoted.
    begin: '(\()\s*(_)\b'
    beginCaptures:
      '1': {name: keyword.smt2}
      '2': {name: constant.numeric.smt2}
    end: '((([1-9][0-9]*)\s*)+)(\))|(\))'
    endCaptures:
      '1': {name: constant.other.smt2}
      '4': {name: keyword.smt2}
      '5': {name: invalid.smt2}
    patterns:
      - include: '#simpleSymbols'
      - include: '#quotedSymbols'
      - name: invalid.smt2
        match: '[^\s\)]*'

  # sorts:
