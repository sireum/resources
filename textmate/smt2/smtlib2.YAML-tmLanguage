name: SMT-LIB 2.0
# From
#   http://smtlib.cs.uiowa.edu/papers/smt-lib-reference-v2.0-r10.12.21.pdf
scopeName: smt2
fileTypes: [smt2]
uuid: bc1d9256-66de-45e3-8be6-813b26a05a7c

patterns:
- include: '#comments'
- include: '#commands'


repository:

  comments:
    name: comment.smt2
    match: ';.*$'

  reserved:
    name: 'constant.numeric.other.smt2'
    match: '\b(par|STRING|DECIMAL|NUMERAL|_|as|let|forall|exists)\b|!'

  numerals:
    name: constant.other.smt2
    match: '\b(0|[1-9][0-9]*)\b'

  consts:
    patterns:
    - comment: Decimals.
      name: constant.other.smt2
      match: '\b(0|[1-9][0-9]*)\.(0|[1-9][0-9]*)'
    - include: '#numerals'
    - comment: Hexadecimals.
      name: constant.other.smt2
      match: '#x\h+'
    - comment: Binarys.
      name: constant.other.smt2
      match: '#b(0|1)+'
    - comment: String literals.
      name: constant.other.smt2
      match: '\"(\\\"|[^\"])*\"'

  convenienceSymbols:
    patterns:
    - comment: Propositional and =.
      name: keyword.smt2
      match: '(\b(true|false|and|or|ite|not)\b)|((=>|=)\s)'
    - comment: Arithmetic.
      name: keyword.smt2
      match: '[<>[<=][>=]\+\-\*/]\s'
    - comment: Pritive types.
      name: support.type.smt2
      match: '\b(Bool|Int|Real)\b'

  simpleSymbols:
    patterns:
    - match: '[~@\$%\^&\*\-\+=<>\.\?/][~!@\$%\^&\*\-\+=<>\.\?/\w]*'
    - comment: Word separator if starting by alpha.
      match: '\b[a-zA-Z][~!@\$%\^&\*\-\+=<>\.\?/\w]*'
    # - comment: Word separator if starting by alpha.
    #            Capital is interpreted as type for readability
    #   name: support.type.smt2
    #   match: '\b[A-Z][~!@\$%\^&\*-\+=<>\.\?/\w]*'
    - comment: _ and ! are reserved.
      match: '[!_][~!@\$%\^&\*\-\+=<>\.\?/\w]+'

  quotedSymbols:
    begin: '(\|)'
    beginCaptures:
      '0': {name: constant.numeric.smt2 }
    end: '(\|)'
    endCaptures:
      '0': {name: constant.numeric.smt2 }
    patterns:
    - comment: Hilight backslash because illegal.
      name: invalid.smt2
      match: '\\'

  keywords:
    name: keyword.smt2
    match: ':[\w~!@\$%\^&\*\-\+=<>\.\?/]+'

  # sExpr:
  #   patterns:
